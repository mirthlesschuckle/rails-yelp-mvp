<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All restaurants</h1>
      <ul class="list-group mb-3">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item">
            <% if restaurant.reviews.any? %>
              <% average = (restaurant.reviews.map(&:rating).sum / restaurant.reviews.count.to_f).ceil %>
            <% end %>
            <%= link_to "#{restaurant.name} - #{average} stars", restaurant_path(restaurant) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new Restaurant", new_restaurant_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
